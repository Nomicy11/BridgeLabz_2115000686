import java.util.*;

class ZeroSumSubarrays {
    public static List<int[]> findZeroSumSubarrays(int[] nums) {
        List<int[]> result = new ArrayList<>();
        Map<Integer, List<Integer>> sumMap = new HashMap<>();
        int sum = 0;
        sumMap.put(0, new ArrayList<>(Arrays.asList(-1))); 

        for (int i = 0; i < nums.length; i++) {
            sum += nums[i];

            if (sumMap.containsKey(sum)) {
                for (int start : sumMap.get(sum)) {
                    result.add(Arrays.copyOfRange(nums, start + 1, i + 1));
                }
            }

            sumMap.putIfAbsent(sum, new ArrayList<>());
            sumMap.get(sum).add(i);
        }

        return result;
    }

    public static void printSubarrays(List<int[]> subarrays) {
        for (int[] subarray : subarrays) {
            System.out.println(Arrays.toString(subarray));
        }
    }

    public static void main(String[] args) {
        int[] nums = {3, 4, -7, 1, 3, 3, 1, -4};

        System.out.println("Subarrays with zero sum:");
        printSubarrays(findZeroSumSubarrays(nums));
    }
}																			